<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="smallWhiteFont" parent="smallFont">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="bigBoldWhiteFont">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="regularWhiteFont" parent="regularFont">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="regularFont">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="regularBoldFont">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallFont">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="priorityFontLow" parent="smallFont">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="priorityFontMedium" parent="smallFont">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="priorityFontHigh" parent="smallFont">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="startTriangle">
        <item name="android:textColor">@color/colorAlmostWhite</item>
        <item name="android:textSize">50dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:alpha">0.7</item>
        <item name="android:text">&#9654;</item>
    </style>


</resources>
